#!/bin/bash


# 验证电话号码
# 常见的电话号码格式  ： (123)456-7890  (123) 456-7890  123-456-7890  123.456.7890

echo '(123)456-7890
(123) 456-7890
123-456-7890
123.456.7890' | gawk --re-interval '/^\(?[2-9][0-9]{2}\)?(| |-|\.)[0-9]{3}( |-|\.)[0-9]{4}/{print $0}'



echo 

echo '123.456.7890' | gawk --re-interval '/^\(?[2-9][0-9]{2}\)?(| |-|\.)[0-9]{3}( |-|\.)[0-9]{4}/{print $0}'

